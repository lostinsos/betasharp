<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BetaSharp.Launcher.Features.Home"

             x:Class="BetaSharp.Launcher.Features.Home.HomeView" x:DataType="local:HomeViewModel">

    <Interaction.Behaviors>
        <EventTriggerBehavior EventName="AttachedToVisualTree">
            <InvokeCommandAction Command="{Binding InitializeCommand}" />
        </EventTriggerBehavior>
    </Interaction.Behaviors>

    <Grid>
        <TextBlock Text="Loading account(s)..." Opacity="0.5" HorizontalAlignment="Center"
                   VerticalAlignment="Center" IsVisible="{CompiledBinding !IsReady}" />

        <Grid RowDefinitions="Auto *" IsVisible="{CompiledBinding IsReady}">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="25" Grid.Row="0" Margin="25">
                <Border Width="50" Height="50" CornerRadius="5" ClipToBounds="True">
                    <Image Source="{CompiledBinding Face}" RenderOptions.BitmapInterpolationMode="None" Stretch="UniformToFill" />
                </Border>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Welcome" Opacity="0.5" />
                    <TextBlock Text="{CompiledBinding Name}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </StackPanel>
            </StackPanel>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Grid.Row="1">
                <!-- ReSharper disable once Xaml.StyleClassNotFound -->
                <Button Content="Play" Classes="accent" Command="{CompiledBinding PlayCommand}" />

                <Button Content="Sign out" Command="{CompiledBinding SignOutCommand}" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
